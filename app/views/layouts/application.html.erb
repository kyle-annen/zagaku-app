<!DOCTYPE html>
<html>
  <head>
    <title>Zagaku</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <div class="row">
        <p class="notice animated fadeOut"><%= notice %></p>
        <p class="alert animated fadeOut"><%= alert %></p>
      </div>
    </div>
    <div class="container">
      <div class="row">
        <%= link_to "Overview", root_path, class: "button u-pull-left" %>
        <%= link_to "Zagaku Calendar", calendar_path, class: "button u-pull-left" %>
        <% if user_signed_in? %>
          <div class="u-pull-right">
            <span><%= current_user.email %></span>
            <%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: "button" %>
          </div>
        <% else %>
          <%= link_to "Sign in with Google", user_google_oauth2_omniauth_authorize_path, class: "button u-pull-right" %>
        <% end %>
      </div>
    </div>


    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
